<!DOCTYPE html>
<html>
<head>
    <title>AI Teaching Assistant - PPT Generation</title>
    <!-- AIPPT SDK -->
    <script src="https://api-static.aippt.cn/aippt-iframe-sdk.js"></script>
    <style>
        .ppt-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            min-height: calc(100vh - 4rem);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            margin-bottom: 2rem;
            text-align: center;
        }

        #aipptContainer {
            width: 90%;
            height: 700px;
            margin: 2rem auto;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .error-message {
            background-color: #fee2e2;
            border: 1px solid #ef4444;
            color: #dc2626;
            padding: 1rem;
            border-radius: 0.5rem;
            margin: 1rem 0;
            display: none;
            width: 100%;
            text-align: center;
        }

        .loading {
            text-align: center;
            padding: 2rem;
            color: #6b7280;
        }
    </style>
</head>
<body>
    <div class="ppt-container">
        <h1>Generate PPT Presentation</h1>
        <div id="errorMessage" class="error-message"></div>
        <div id="loadingMessage" class="loading">Wait for a momment, if nothing happens, refresh the page in 5 seconds</div>
        <div id="aipptContainer"></div>
    </div>

    <script>
        async function initAIPPT() {
            const errorMessage = document.getElementById('errorMessage');
            const loadingMessage = document.getElementById('loadingMessage');

            try {
                // First get authentication code from your backend
                const authResponse = await fetch('/ppt-gen/auth', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const authData = await authResponse.json();
                if (!authData.code) {
                    throw new Error('Failed to get authentication code');
                }

                // Initialize AIPPT with the received auth data
                await AipptIframe.show({
                    appkey: authData.appkey,
                    channel: authData.channel, // This will be 'web'
                    code: authData.code,
                    onMessage(eventType, data) {
                        console.log('AIPPT Event:', eventType, data);
                        // Handle different event types here if needed
                        switch(eventType) {
                            case 'error':
                                showError(data.message);
                                break;
                            case 'ready':
                                loadingMessage.style.display = 'none';
                                break;
                        }
                    }
                });
            } catch (error) {
                console.error('AIPPT initialization error:', error);
                showError(error.message || 'Failed to initialize PPT editor');
            }
        }

        function showError(message) {
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.textContent = message;
            errorMessage.style.display = 'block';
            document.getElementById('loadingMessage').style.display = 'none';
        }

        // Initialize when page loads
        initAIPPT();
    </script>
</body>
</html> 